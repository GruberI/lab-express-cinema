<div class="container">
    <div class="row detailsDiv">
        <img src="{{this.image}}" alt="image">
        <div class="textDiv">
            <a href="/movies" class="detailsA">Go Back</a>
            <h2>{{this.title}}</h2>
            <h3>Director: {{this.director}}</h3>
            <h4>Stars:</h4>
            <ul>
                {{#each this.stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{this.description}}</p>
        </div>
    </div>
</div>